# Database Configuration
# Supported databases: mysql, postgres, sqlite
DB_TYPE=sqlite

# MySQL Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_NAME=url_shortener

# PostgreSQL Configuration (uncomment and adjust as needed)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=password
# DB_NAME=url_shortener

# SQLite Configuration (default)
# DB_TYPE=sqlite
